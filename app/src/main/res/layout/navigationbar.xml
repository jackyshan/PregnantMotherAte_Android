<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="horizontal"
              android:layout_width="match_parent"
              android:layout_height="45dp" android:background="@color/navigation_bar_default">

    <FrameLayout
            android:layout_width="0dp"
            android:layout_height="match_parent" android:layout_weight="1" android:id="@+id/navigationbar_fl_left">
        <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/navigationbar_iv_left" android:src="@mipmap/navigationbar_back"
                android:scaleType="center"/>
        <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/navigationbar_tv_left" android:gravity="center_vertical" android:textSize="16sp"
                android:paddingLeft="10dp" android:textColor="@color/white"/>
    </FrameLayout>
    <FrameLayout
            android:layout_width="0dp"
            android:layout_height="match_parent" android:layout_weight="3" android:id="@+id/navigationbar_fl_middle">
        <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/navigationbar_tv_middle" android:padding="5dp" android:textSize="20sp" android:gravity="center"
                android:textColor="@color/white" android:text="title"/>
    </FrameLayout>
    <FrameLayout
            android:layout_width="0dp"
            android:layout_height="fill_parent" android:layout_weight="1" android:id="@+id/navigationbar_fl_right">
        <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/navigationbar_iv_right"/>
        <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/navigationbar_tv_right" android:gravity="center_vertical|right" android:paddingRight="10dp"
                android:textSize="16sp" android:textColor="@color/white"/>
    </FrameLayout>
</LinearLayout>